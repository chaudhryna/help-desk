<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <p><strong>Role</strong>: <%= user.role %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Submit a ticket</h2>

            <form action="/ticket/createTicket" method="POST">
              <div class="mb-3">
                  <label for="shortDesc" class="form-label">Short Description</label>
                  <input type="text" class="form-control" id="shortDesc" name="shortDesc">
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Full description</label>
                <textarea class="form-control" id="description" name="description"></textarea>
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<tickets.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/ticket/<%= tickets[i]._id%>">
              <p><%= tickets[i].shortDesc%></p>
              <p>Opened by: <%= user.userName%></p>
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>