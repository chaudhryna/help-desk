<%- include('partials/header') -%>
<%- include('partials/navbar') -%>

  <div class="container col-6">
    <div class="row justify-content-center mt-5">
      <div class="card shadow p-3 mb-5 bg-body rounded">
        <div class="card-body">
          <h5 class="card-title">Ticket: <%= ticket._id %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted">Opened by: <%= ticket.user.firstName %> <%= ticket.user.lastName %>
          </h6>
          <hr>  
          <p>
            <strong>Type of Issue:</strong>  <%= ticket.typeOfTicket %>
          </p>
          <p>
            <strong>Status:</strong> <%= ticket.status %>
          </p>
          <p class="card-text">
            <span class="text-muted">Subject:</span> <%= ticket.shortDesc %>
          </p>
          <p>
            <%= ticket.details %>
          </p>
          <% if (ticket.user._id == user.id){ %>
            <form action="/ticket/deleteTicket/<%= ticket._id %>?_method=DELETE" method="POST" class="col-3">
              <button class="btn btn-danger" type="submit">
                <i class="fa-solid fa-trash fa-lg"></i></button>
            </form>
          <%}%>
  
        </div>
      </div>
      <div class="d-lg-flex justify-content-between">
        <a class="btn btn-primary" href="/profile">Return to Profile Page</a>
        <a class="btn btn-primary" href="/feed">Return to All Tickets</a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') -%>